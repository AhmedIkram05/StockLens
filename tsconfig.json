/*
 * TSConfig
 *
 * TypeScript configuration that extends Expo's base tsconfig, enables strict
 * mode and sets the `@/*` path alias to `src/*`.
 */
{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
